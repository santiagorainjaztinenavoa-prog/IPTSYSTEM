@model IPTSYSTEM.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register - Recommerce";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/png" href="/logo/logo.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/pages/register.css" asp-append-version="true" />
</head>
<body>
<div class="register-container">
    <div class="register-card">
        <div class="register-header">
            <div class="logo-circle"
                 style="background:white;border-radius:50%;width:60px;height:60px;display:flex;align-items:center;justify-content:center;box-shadow:0 2px 8px rgba(0,0,0,0.08);margin:0 auto 16px auto;">
                <img src="/logo/logo.png" alt="System Logo"
                     style="height:40px;width:40px;object-fit:contain;border-radius:50%;" />
            </div>
            <h1 class="welcome-title">Create Account</h1>
            <p class="welcome-subtitle">Join our marketplace today</p>
        </div>

        <form id="registerForm" asp-action="Register" asp-controller="Home" method="post" class="register-form">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="AccountType" class="form-label">Account Type <span class="required-asterisk">*</span>
                </label>
                <select asp-for="AccountType" class="form-control">
                    <option value="">Select type...</option>
                    <option value="Buyer">Buyer</option>
                    <option value="Seller">Seller</option>
                </select>
                <span asp-validation-for="AccountType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label">Name <span class="required-asterisk">*</span></label>
                <div class="row g-2">
                    <div class="col">
                        <div class="input-with-icon">
                            <i class="bi bi-person input-icon"></i>
                            <input name="FirstName" id="FirstName" type="text" class="form-control"
                                   placeholder="First name" autocomplete="given-name" />
                        </div>
                    </div>
                    <div class="col">
                        <div class="input-with-icon">
                            <i class="bi bi-person input-icon"></i>
                            <input name="LastName" id="LastName" type="text" class="form-control"
                                   placeholder="Last name" autocomplete="family-name" />
                        </div>
                    </div>
                </div>
                <span class="text-danger" data-valmsg-for="FullName" data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="form-label">Email Address <span class="required-asterisk">*</span>
                </label>
                <div class="input-with-icon">
                    <i class="bi bi-envelope input-icon"></i>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email"
                           autocomplete="email" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Username" class="form-label">Username <span class="required-asterisk">*</span>
                </label>
                <div class="input-with-icon">
                    <i class="bi bi-at input-icon"></i>
                    <input asp-for="Username" class="form-control" placeholder="Choose a username"
                           autocomplete="username" />
                </div>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label">Phone Number <span class="required-asterisk">*</span></label>
                <div class="input-with-icon">
                    <i class="bi bi-telephone input-icon"></i>
                    <input name="PhoneNumber" id="PhoneNumber" type="tel" class="form-control"
                           placeholder="Enter your phone number" autocomplete="tel" required />
                </div>
                <span class="text-danger" data-valmsg-for="PhoneNumber" data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <label class="form-label">Location <span class="required-asterisk">*</span></label>
                <div class="row g-2">
                    <div class="col-12 col-sm-6">
                        <select id="regionSelect" class="form-control" aria-label="Region">
                            <option value="">Region</option>
                        </select>
                    </div>
                    <div class="col-12 col-sm-6">
                        <select id="provinceSelect" class="form-control" aria-label="Province" disabled>
                            <option value="">Province</option>
                        </select>
                    </div>
                    <div class="col-12 col-sm-6">
                        <select id="citySelect" class="form-control" aria-label="City/Municipality" disabled>
                            <option value="">City / Municipality</option>
                        </select>
                    </div>
                    <div class="col-12 col-sm-6">
                        <select id="barangaySelect" class="form-control" aria-label="Barangay" disabled>
                            <option value="">Barangay</option>
                        </select>
                    </div>
                </div>
                <input type="hidden" name="Region" id="Region" />
                <input type="hidden" name="Province" id="Province" />
                <input type="hidden" name="City" id="City" />
                <input type="hidden" name="Barangay" id="Barangay" />
            </div>
            <div class="form-group">
                <label class="form-label">Address</label>
                <div class="input-with-icon">
                    <i class="bi bi-geo-alt input-icon"></i>
                    <input asp-for="Address" id="AddressDisplay" class="form-control"
                           placeholder="Region, Province, City, Barangay" readonly />
                </div>
            </div>
            <div class="form-group">
                <div class="row g-2">
                    <div class="col-12 col-sm-4">
                        <div class="input-with-icon">
                            <i class="bi bi-mailbox input-icon"></i>
                            <input id="PostalCode" name="PostalCode" class="form-control" placeholder="Postal Code" />
                        </div>
                    </div>
                    <div class="col-12 col-sm-8">
                        <div class="input-with-icon">
                            <i class="bi bi-building input-icon"></i>
                            <input id="StreetAddress" name="StreetAddress" class="form-control"
                                   placeholder="Street Name, Building, House No." />
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="form-label">Password <span class="required-asterisk">*</span></label>
                <div class="password-wrapper">
                    <div class="input-with-icon">
                        <i class="bi bi-lock input-icon"></i>
                        <input asp-for="Password" type="password" id="passwordInput" class="form-control"
                               placeholder="Create a password (min. 6 characters)" autocomplete="new-password" />
                        <button type="button" class="password-toggle" id="passwordToggle"
                                aria-label="Toggle password visibility">
                            <i class="bi bi-eye" id="passwordIcon"></i>
                        </button>
                    </div>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label">Confirm Password <span class="required-asterisk">*</span>
                </label>
                <div class="password-wrapper">
                    <div class="input-with-icon">
                        <i class="bi bi-lock-fill input-icon"></i>
                        <input asp-for="ConfirmPassword" type="password" id="confirmPasswordInput" class="form-control"
                               placeholder="Confirm your password" autocomplete="new-password" />
                        <button type="button" class="password-toggle" id="confirmPasswordToggle"
                                aria-label="Toggle confirm password visibility">
                            <i class="bi bi-eye" id="confirmPasswordIcon"></i>
                        </button>
                    </div>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="AgreeToTerms" class="form-check-input" type="checkbox" id="agreeToTerms" />
                    <label class="form-check-label" for="agreeToTerms">
                        I agree to the <a href="#" class="terms-link">Terms and Conditions</a> and <a href="#"
                                                                                                   class="terms-link">Privacy Policy</a> <span
                                class="required-asterisk">*</span>
                    </label>
                </div>
                <span asp-validation-for="AgreeToTerms" class="text-danger"></span>
            </div>
            <button type="submit" class="btn-register">
                <span class="btn-text">Create Account</span>
                <span class="btn-spinner spinner-border spinner-border-sm d-none" role="status">
                    <span class="visually-hidden">Loading...</span>
                </span>
            </button>
        </form>

        <div class="login-footer">Already have an account? <a href="@Url.Action("Login", "Home")" class="login-link">Log
            in here</a></div>
    </div>
</div>
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="registerToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <i class="bi bi-info-circle-fill me-2" id="toastIcon"></i>
            <strong class="me-auto" id="toastTitle">Notification</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body" id="toastMessage">Message here</div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script type="module" src="~/js/firebase-client.js" asp-append-version="true"></script>
<script src="~/js/register-controller.js" asp-append-version="true"></script>
</body>
</html>
