@model IPTSYSTEM.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register - Recommerce";
    Layout = null; // Clean standalone registration page
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/png" href="/logo/logo.png" />
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    
    <!-- Custom Register Styles -->
    <link rel="stylesheet" href="~/css/pages/register.css" asp-append-version="true" />
</head>
<body>
    <div class="register-container">
        <div class="register-card">
            <!-- Logo and Welcome Message -->
            <div class="register-header">
                <div class="logo-circle" style="background: white; border-radius: 50%; width: 60px; height: 60px; display: flex; align-items: center; justify-content: center; box-shadow: 0 2px 8px rgba(0,0,0,0.08); margin: 0 auto 16px auto;">
                    <img src="/logo/logo.png" alt="System Logo" style="height: 40px; width: 40px; object-fit: contain; border-radius: 50%;" />
                </div>
                <h1 class="welcome-title">Create Account</h1>
                <p class="welcome-subtitle">Join our marketplace today</p>
            </div>

            <!-- Register Form -->
            <form id="registerForm" asp-action="Register" asp-controller="Home" method="post" class="register-form">
                @Html.AntiForgeryToken()
                <!-- Account Type Field -->
                <div class="form-group">
                    <label asp-for="AccountType" class="form-label">Account Type <span class="required-asterisk">*</span></label>
                    <select asp-for="AccountType" class="form-control">
                        <option value="">Select type...</option>
                        <option value="Buyer">Buyer</option>
                        <option value="Seller">Seller</option>
                    </select>
                    <span asp-validation-for="AccountType" class="text-danger"></span>
                </div>
                
                <!-- First & Last Name Fields (side by side) -->
                <div class="form-group">
                    <label class="form-label">Name <span class="required-asterisk">*</span></label>
                    <div class="row g-2">
                        <div class="col">
                            <div class="input-with-icon">
                                <i class="bi bi-person input-icon"></i>
                                <input name="FirstName" id="FirstName" type="text"
                                       class="form-control" placeholder="First name" autocomplete="given-name" />
                            </div>
                        </div>
                        <div class="col">
                            <div class="input-with-icon">
                                <i class="bi bi-person input-icon"></i>
                                <input name="LastName" id="LastName" type="text"
                                       class="form-control" placeholder="Last name" autocomplete="family-name" />
                            </div>
                        </div>
                    </div>
                    <span class="text-danger" data-valmsg-for="FullName" data-valmsg-replace="true"></span>
                </div>

                <!-- Email Field -->
                <div class="form-group">
                    <label asp-for="Email" class="form-label">Email Address <span class="required-asterisk">*</span></label>
                    <div class="input-with-icon">
                        <i class="bi bi-envelope input-icon"></i>
                        <input asp-for="Email" 
                               type="email"
                               class="form-control" 
                               placeholder="Enter your email" 
                               autocomplete="email" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Username Field -->
                <div class="form-group">
                    <label asp-for="Username" class="form-label">Username <span class="required-asterisk">*</span></label>
                    <div class="input-with-icon">
                        <i class="bi bi-at input-icon"></i>
                        <input asp-for="Username" 
                               class="form-control" 
                               placeholder="Choose a username" 
                               autocomplete="username" />
                    </div>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <!-- Phone Number Field -->
                <div class="form-group">
                    <label class="form-label">Phone Number <span class="required-asterisk">*</span></label>
                    <div class="input-with-icon">
                        <i class="bi bi-telephone input-icon"></i>
                        <input name="PhoneNumber" 
                               id="PhoneNumber"
                               type="tel"
                               class="form-control" 
                               placeholder="Enter your phone number" 
                               autocomplete="tel"
                               required />
                    </div>
                    <span class="text-danger" data-valmsg-for="PhoneNumber" data-valmsg-replace="true"></span>
                </div>

