@model IPTSYSTEM.Models.LoginViewModel

@{
    ViewData["Title"] = "Login - Recommerce";
    Layout = null; // Clean standalone login page
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    
    <!-- Custom Login Styles -->
    <link rel="stylesheet" href="~/css/pages/login.css" asp-append-version="true" />
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <!-- Logo and Welcome Message -->
            <div class="login-header">
                <div class="logo-circle">
                    <span class="logo-text">R</span>
                </div>
                <h1 class="welcome-title">Welcome back</h1>
                <p class="welcome-subtitle">Log in to continue</p>
            </div>

            <!-- Login Form -->
            <form id="loginForm" asp-action="Login" asp-controller="Home" method="post" class="login-form">
                @Html.AntiForgeryToken()
                
                <!-- Email/Username Field -->
                <div class="form-group">
                    <label asp-for="EmailOrUsername" class="form-label">Email or Username</label>
                    <input asp-for="EmailOrUsername" 
                           class="form-control" 
                           placeholder="Enter your email or username" 
                           autocomplete="username" />
                    <span asp-validation-for="EmailOrUsername" class="text-danger"></span>
                </div>

                <!-- Password Field -->
                <div class="form-group">
                    <label asp-for="Password" class="form-label">Password</label>
                    <div class="password-wrapper">
                        <input asp-for="Password" 
                               type="password" 
                               id="passwordInput"
                               class="form-control" 
                               placeholder="Enter your password" 
                               autocomplete="current-password" />
                        <button type="button" 
                                class="password-toggle" 
                                id="passwordToggle"
                                aria-label="Toggle password visibility">
                            <i class="bi bi-eye" id="passwordIcon"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Forgot Password Link -->
                <div class="form-footer">
                    <a href="#" class="forgot-link">Forgot Password?</a>
                </div>

                <!-- Login Button -->
                <button type="submit" class="btn-login">
                    <span class="btn-text">Log In</span>
                    <span class="btn-spinner spinner-border spinner-border-sm d-none" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </span>
                </button>
            </form>

            <!-- Divider -->
            <div class="divider">
                <span class="divider-text">OR</span>
            </div>

            <!-- Social Login Buttons -->
            <div class="social-login">
                <button type="button" class="btn-social btn-google" id="googleLoginBtn">
                    <svg class="social-icon" viewBox="0 0 24 24">
                        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                    </svg>
                    <span>Continue with Google</span>
                </button>

                <button type="button" class="btn-social btn-facebook" id="facebookLoginBtn">
                    <svg class="social-icon" fill="#1877F2" viewBox="0 0 24 24">
                        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                    </svg>
                    <span>Continue with Facebook</span>
                </button>
            </div>

            <!-- Sign Up Link -->
            <div class="signup-footer">
                Don't have an account? 
                <a href="@Url.Action("Register", "Home")" class="signup-link">Sign up here</a>
            </div>
        </div>
    </div>

    <!-- Toast Notification -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="loginToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <i class="bi bi-info-circle-fill me-2" id="toastIcon"></i>
                <strong class="me-auto" id="toastTitle">Notification</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body" id="toastMessage">
                Message here
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/login-controller.js" asp-append-version="true"></script>
</body>
</html>
