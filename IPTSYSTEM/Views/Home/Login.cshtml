@model IPTSYSTEM.Models.LoginViewModel

@{
    ViewData["Title"] = "Login - Recommerce";
    Layout = null; // Clean standalone login page
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/png" href="/logo/logo.png" />
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    
    <!-- Custom Login Styles -->
    <link rel="stylesheet" href="~/css/pages/login.css" asp-append-version="true" />
</head>
<body>
    <!-- Single Back Button -->
    <button type="button" class="btn btn-light shadow-sm rounded-circle" onclick="handleBack()"
            aria-label="Go back"
            style="position: fixed; top: 20px; left: 20px; width: 42px; height: 42px; display: flex; align-items: center; justify-content: center; z-index: 1100;">
        <i class="bi bi-arrow-left"></i>
    </button>

    <div class="login-container">
        <div class="login-card">
            <!-- Logo and Welcome Message -->
            <div class="login-header">
                <div class="logo-circle" style="background: white; border-radius: 50%; width: 60px; height: 60px; display: flex; align-items: center; justify-content: center; box-shadow: 0 2px 8px rgba(0,0,0,0.08); margin: 0 auto 16px auto;">
                    <img src="/logo/logo.png" alt="System Logo" style="height: 40px; width: 40px; object-fit: contain; border-radius: 50%;" />
                </div>
                <h1 class="welcome-title">Welcome back</h1>
                <p class="welcome-subtitle">Log in to continue</p>
            </div>

            <!-- Login Form -->
            <form id="loginForm" asp-action="Login" asp-controller="Home" method="post" class="login-form">
                @Html.AntiForgeryToken()
                
                <!-- Email Field -->
                <div class="form-group">
                    <label asp-for="EmailOrUsername" class="form-label">Email</label>
                    <input asp-for="EmailOrUsername" 
                           class="form-control" 
                           placeholder="Enter your email" 
                           autocomplete="email" />
                    <span asp-validation-for="EmailOrUsername" class="text-danger"></span>
                </div>

                <!-- Password Field -->
                <div class="form-group">
                    <label asp-for="Password" class="form-label">Password</label>
                    <div class="password-wrapper">
                        <input asp-for="Password" 
                               type="password" 
                               id="passwordInput"
                               class="form-control" 
                               placeholder="Enter your password" 
                               autocomplete="current-password" />
                        <button type="button" 
                                class="password-toggle" 
                                id="passwordToggle"
                                aria-label="Toggle password visibility">
                            <i class="bi bi-eye" id="passwordIcon"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Forgot Password Link -->
                <div class="form-footer">
                    <a href="#" class="forgot-link" onclick="openForgotModal(event)">Forgot Password?</a>
                </div>

                <!-- Login Button -->
                <button type="submit" class="btn-login">
                    <span class="btn-text">Log In</span>
                    <span class="btn-spinner spinner-border spinner-border-sm d-none" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </span>
                </button>
            </form>

            <!-- Sign Up Link -->
            <div class="signup-footer">
                Don't have an account? 
                <a href="@Url.Action("Register", "Home")" class="signup-link">Sign up here</a>
            </div>
        </div>
    </div>

    <!-- Toast Notification -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="loginToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <i class="bi bi-info-circle-fill me-2" id="toastIcon"></i>
                <strong class="me-auto" id="toastTitle">Notification</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body" id="toastMessage">
                Message here
            </div>
        </div>
    </div>

    <!-- Forgot Password Modal -->
    <div class="modal fade" id="forgotPasswordModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content glass-modal">
                <div class="modal-header border-0 pb-0">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center px-5 pb-5 pt-0">
                    <div class="mb-4 icon-float">
                        <div class="icon-circle">
                            <i class="bi bi-shield-lock-fill text-primary" style="font-size: 2.5rem;"></i>
                        </div>
                    </div>
                    
                    <h3 class="fw-bold mb-2">Forgot Password?</h3>
                    <p class="text-muted mb-4">Enter your email address and we'll send you a link to reset your password.</p>
                    
                    <form id="forgotPasswordForm" onsubmit="handleForgotSubmit(event)">
                        <div class="form-floating mb-4">
                            <input type="email" class="form-control rounded-4" id="forgotEmail" placeholder="name@example.com" required>
                            <label for="forgotEmail">Email address</label>
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-100 py-3 rounded-4 fw-bold btn-send-reset">
                            <span>Send Reset Link</span>
                            <div class="spinner-border spinner-border-sm text-light ms-2 d-none" role="status"></div>
                        </button>
                    </form>
                    
                    <div class="mt-4">
                        <a href="#" class="text-decoration-none text-muted small" data-bs-dismiss="modal">
                            <i class="bi bi-arrow-left me-1"></i> Back to Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        /* Glassmorphism & Animations */
        .glass-modal {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
            border-radius: 24px;
            animation: slideUpFade 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        }
        
        @@keyframes slideUpFade {
            from {
                opacity: 0;
                transform: translateY(20px) scale(0.96);
            }
            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }

        .icon-circle {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #e0f2fe 0%, #f0f9ff 100%);
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 12px rgba(14, 165, 233, 0.15);
        }
        
        .icon-float {
            animation: float 3s ease-in-out infinite;
        }
        
        @@keyframes float {
            0% { transform: translateY(0px); }
            50% { transform: translateY(-6px); }
            100% { transform: translateY(0px); }
        }

        .btn-send-reset {
            transition: all 0.3s ease;
            background: linear-gradient(135deg, #0ea5e9 0%, #0284c7 100%);
            border: none;
            box-shadow: 0 4px 12px rgba(2, 132, 199, 0.3);
        }
        
        .btn-send-reset:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(2, 132, 199, 0.4);
        }
        
        .form-floating > .form-control:focus ~ label {
            color: #0ea5e9;
        }
        .form-floating > .form-control:focus {
            border-color: #0ea5e9;
            box-shadow: 0 0 0 4px rgba(14, 165, 233, 0.1);
        }
    </style>

    <script>
        function openForgotModal(e) {
            e.preventDefault();
            const modal = new bootstrap.Modal(document.getElementById('forgotPasswordModal'));
            modal.show();
            // Pre-fill email if user typed it in login form
            const loginEmail = document.getElementById('EmailOrUsername')?.value;
            if (loginEmail) {
                document.getElementById('forgotEmail').value = loginEmail;
            }
        }

        async function handleForgotSubmit(e) {
            e.preventDefault();
            const email = document.getElementById('forgotEmail').value;
            const btn = document.querySelector('.btn-send-reset');
            const spinner = btn.querySelector('.spinner-border');
            const btnText = btn.querySelector('span');
            
            if (!email) return;

            // UI Loading State
            btn.disabled = true;
            spinner.classList.remove('d-none');
            btnText.textContent = 'Sending...';

            try {
                // Ensure helper exists
                if (typeof window.firebaseSendPasswordResetEmail !== 'function') {
                    throw new Error('Firebase client not fully loaded. Please refresh.');
                }

                const result = await window.firebaseSendPasswordResetEmail(email);

                if (result.success) {
                    // Success UI
                    const modalBody = document.querySelector('#forgotPasswordModal .modal-body');
                    modalBody.innerHTML = `
                        <div class="text-center py-4 animate__animated animate__fadeIn">
                            <div class="icon-circle mb-4" style="background: #ecfdf5; box-shadow: 0 4px 12px rgba(16, 185, 129, 0.15);">
                                <i class="bi bi-check-lg text-success" style="font-size: 2.5rem;"></i>
                            </div>
                            <h3 class="fw-bold mb-2">Check your inbox</h3>
                            <p class="text-muted mb-4">We've sent a password reset link to <br><strong>${email}</strong></p>
                            <button class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Close</button>
                        </div>
                    `;
                } else {
                    throw new Error(result.message);
                }
            } catch (error) {
                // Error UI
                alert('Failed to send reset email: ' + error.message);
                btn.disabled = false;
                spinner.classList.add('d-none');
                btnText.textContent = 'Send Reset Link';
            }
        }
    </script>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Firebase client (module) - ensure same client config as registration -->
    <script type="module" src="~/js/firebase-client.js" asp-append-version="true"></script>
    <script src="~/js/login-controller.js" asp-append-version="true"></script>

    <script>
        function handleBack() {
            try {
                if (document.referrer && new URL(document.referrer).origin === window.location.origin) {
                    history.back();
                    return;
                }
            } catch {}
            window.location.href = '/Home/Landing';
        }
    </script>
</body>
</html>
