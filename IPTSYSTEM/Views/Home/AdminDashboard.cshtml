@model IPTSYSTEM.Models.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Recommerce</title>
    
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    
    <style>
        /* Custom scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }
        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }
        ::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 4px;
        }
        ::-webkit-scrollbar-thumb:hover {
            background: #555;
        }
    </style>
</head>
<body class="bg-gray-50">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <aside id="sidebar" class="w-64 bg-gray-900 text-white transition-all duration-300 flex flex-col">
            <!-- Sidebar Header -->
            <div class="p-4 flex items-center justify-between border-b border-gray-700">
                <span id="sidebarBrand" class="text-xl font-bold">Recommerce</span>
                <button id="sidebarToggle" class="hover:bg-gray-800 p-2 rounded transition">
                    <i class="bi bi-x-lg" id="sidebarIcon"></i>
                </button>
            </div>

            <!-- Navigation Menu -->
            <nav class="flex-1 px-2 py-4 space-y-1">
                <a href="@Url.Action("AdminDashboard", "Home", new { menu = "overview" })" 
                   class="w-full flex items-center gap-3 px-3 py-3 rounded-lg transition @(Model.ActiveMenu == "overview" ? "bg-red-500" : "hover:bg-gray-800")">
                    <i class="bi bi-graph-up text-lg"></i>
                    <span class="sidebar-text">Overview</span>
                </a>

                <a href="@Url.Action("AdminDashboard", "Home", new { menu = "users" })" 
                   class="w-full flex items-center gap-3 px-3 py-3 rounded-lg transition @(Model.ActiveMenu == "users" ? "bg-red-500" : "hover:bg-gray-800")">
                    <i class="bi bi-people text-lg"></i>
                    <span class="sidebar-text">Users</span>
                </a>

                <a href="@Url.Action("AdminDashboard", "Home", new { menu = "listings" })" 
                   class="w-full flex items-center gap-3 px-3 py-3 rounded-lg transition @(Model.ActiveMenu == "listings" ? "bg-red-500" : "hover:bg-gray-800")">
                    <i class="bi bi-cart3 text-lg"></i>
                    <span class="sidebar-text">Listings</span>
                </a>

                <a href="@Url.Action("AdminDashboard", "Home", new { menu = "transactions" })" 
                   class="w-full flex items-center gap-3 px-3 py-3 rounded-lg transition @(Model.ActiveMenu == "transactions" ? "bg-red-500" : "hover:bg-gray-800")">
                    <i class="bi bi-currency-dollar text-lg"></i>
                    <span class="sidebar-text">Transactions</span>
                </a>

                <a href="@Url.Action("AdminDashboard", "Home", new { menu = "settings" })" 
                   class="w-full flex items-center gap-3 px-3 py-3 rounded-lg transition @(Model.ActiveMenu == "settings" ? "bg-red-500" : "hover:bg-gray-800")">
                    <i class="bi bi-gear text-lg"></i>
                    <span class="sidebar-text">Settings</span>
                </a>
            </nav>

            <!-- Logout -->
            <div class="p-2 border-t border-gray-700">
                <form method="post" asp-controller="Home" asp-action="Logout">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="w-full flex items-center gap-3 px-3 py-3 hover:bg-gray-800 rounded-lg transition text-gray-300">
                        <i class="bi bi-box-arrow-right text-lg"></i>
                        <span class="sidebar-text">Logout</span>
                    </button>
                </form>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 overflow-auto">
            <!-- Header -->
            <header class="bg-white border-b border-gray-200 px-6 py-4 flex items-center justify-between sticky top-0 z-10">
                <h1 class="text-2xl font-bold text-gray-800">Admin Dashboard</h1>
                <div class="flex items-center gap-4">
                    <button class="p-2 hover:bg-gray-100 rounded-lg transition relative">
                        <i class="bi bi-bell text-gray-600 text-xl"></i>
                        <span class="absolute top-1 right-1 w-2 h-2 bg-red-500 rounded-full"></span>
                    </button>
                    <div class="w-10 h-10 bg-red-500 rounded-full flex items-center justify-center text-white font-bold">
                        A
                    </div>
                </div>
            </header>

            <!-- Dashboard Content -->
            <div class="p-6">
                @if (Model.ActiveMenu == "overview")
                {
                    <!-- Statistics Cards -->
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
                        <!-- Total Users -->
                        <div class="bg-white rounded-xl shadow-md p-6 hover:shadow-lg transition">
                            <div class="flex items-center justify-between mb-3">
                                <p class="text-gray-600 text-sm font-medium">Total Users</p>
                                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                                    <i class="bi bi-people text-blue-500 text-2xl"></i>
                                </div>
                            </div>
                            <p class="text-3xl font-bold text-gray-800">@Model.Stats.TotalUsers.ToString("N0")</p>
                            <p class="text-xs text-green-600 mt-2 flex items-center gap-1">
                                <i class="bi bi-arrow-up"></i> +12.5% from last month
                            </p>
                        </div>

                        <!-- Active Listings -->
                        <div class="bg-white rounded-xl shadow-md p-6 hover:shadow-lg transition">
                            <div class="flex items-center justify-between mb-3">
                                <p class="text-gray-600 text-sm font-medium">Active Listings</p>
                                <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                                    <i class="bi bi-cart3 text-purple-500 text-2xl"></i>
                                </div>
                            </div>
                            <p class="text-3xl font-bold text-gray-800">@Model.Stats.TotalListings.ToString("N0")</p>
                            <p class="text-xs text-green-600 mt-2 flex items-center gap-1">
                                <i class="bi bi-arrow-up"></i> +8.2% from last month
                            </p>
                        </div>

                        <!-- Total Revenue -->
                        <div class="bg-white rounded-xl shadow-md p-6 hover:shadow-lg transition">
                            <div class="flex items-center justify-between mb-3">
                                <p class="text-gray-600 text-sm font-medium">Total Revenue</p>
                                <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                                    <i class="bi bi-currency-dollar text-green-500 text-2xl"></i>
                                </div>
                            </div>
                            <p class="text-3xl font-bold text-gray-800">?@((Model.Stats.TotalRevenue / 1000).ToString("N1"))k</p>
                            <p class="text-xs text-green-600 mt-2 flex items-center gap-1">
                                <i class="bi bi-arrow-up"></i> +23.1% from last month
                            </p>
                        </div>

                        <!-- Active Transactions -->
                        <div class="bg-white rounded-xl shadow-md p-6 hover:shadow-lg transition">
                            <div class="flex items-center justify-between mb-3">
                                <p class="text-gray-600 text-sm font-medium">Active Transactions</p>
                                <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
                                    <i class="bi bi-graph-up text-orange-500 text-2xl"></i>
                                </div>
                            </div>
                            <p class="text-3xl font-bold text-gray-800">@Model.Stats.ActiveTransactions</p>
                            <p class="text-xs text-green-600 mt-2 flex items-center gap-1">
                                <i class="bi bi-arrow-up"></i> +5.4% from last month
                            </p>
                        </div>
                    </div>

                    <!-- Tables Section -->
                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                        <!-- Recent Users Table -->
                        <div class="bg-white rounded-xl shadow-md p-6">
                            <h2 class="text-lg font-semibold text-gray-800 mb-4 flex items-center gap-2">
                                <i class="bi bi-people text-blue-500"></i>
                                Recent Users
                            </h2>
                            <div class="overflow-x-auto">
                                <table class="w-full text-sm">
                                    <thead class="text-gray-600 border-b">
                                        <tr>
                                            <th class="text-left py-3 px-2 font-semibold">Name</th>
                                            <th class="text-left py-3 px-2 font-semibold">Email</th>
                                            <th class="text-left py-3 px-2 font-semibold">Joined</th>
                                            <th class="text-left py-3 px-2 font-semibold">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var user in Model.RecentUsers)
                                        {
                                            <tr class="border-b hover:bg-gray-50 transition">
                                                <td class="py-3 px-2 font-medium text-gray-800">@user.Name</td>
                                                <td class="py-3 px-2 text-gray-600">@user.Email</td>
                                                <td class="py-3 px-2 text-gray-600">@user.JoinDate</td>
                                                <td class="py-3 px-2">
                                                    <span class="px-3 py-1 rounded-full text-xs font-medium @(user.Status == "active" ? "bg-green-100 text-green-800" : "bg-gray-100 text-gray-800")">
                                                        @user.Status
                                                    </span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Recent Listings Table -->
                        <div class="bg-white rounded-xl shadow-md p-6">
                            <h2 class="text-lg font-semibold text-gray-800 mb-4 flex items-center gap-2">
                                <i class="bi bi-cart3 text-purple-500"></i>
                                Recent Listings
                            </h2>
                            <div class="overflow-x-auto">
                                <table class="w-full text-sm">
                                    <thead class="text-gray-600 border-b">
                                        <tr>
                                            <th class="text-left py-3 px-2 font-semibold">Title</th>
                                            <th class="text-left py-3 px-2 font-semibold">Price</th>
                                            <th class="text-left py-3 px-2 font-semibold">Views</th>
                                            <th class="text-left py-3 px-2 font-semibold">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var listing in Model.RecentListings)
                                        {
                                            <tr class="border-b hover:bg-gray-50 transition">
                                                <td class="py-3 px-2 font-medium text-gray-800">@listing.Title</td>
                                                <td class="py-3 px-2 text-gray-600">â‚±@listing.Price.ToString("N0")</td>
                                                <td class="py-3 px-2 text-gray-600">
                                                    <span class="flex items-center gap-1">
                                                        <i class="bi bi-eye"></i> @listing.Views
                                                    </span>
                                                </td>
                                                <td class="py-3 px-2">
                                                    <span class="px-3 py-1 rounded-full text-xs font-medium @(listing.Status == "active" ? "bg-green-100 text-green-800" : listing.Status == "flagged" ? "bg-red-100 text-red-800" : "bg-gray-100 text-gray-800")">
                                                        @listing.Status
                                                    </span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
                else if (Model.ActiveMenu == "users")
                {
                    <div class="bg-white rounded-xl shadow-md p-8">
                        <div class="flex items-center gap-3 mb-4">
                            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                                <i class="bi bi-people text-blue-500 text-2xl"></i>
                            </div>
                            <h2 class="text-2xl font-semibold text-gray-800">User Management</h2>
                        </div>
                        <p class="text-gray-600">Manage users, view activity, and handle reports.</p>
                    </div>
                }
                else if (Model.ActiveMenu == "listings")
                {
                    <div class="bg-white rounded-xl shadow-md p-8">
                        <div class="flex items-center gap-3 mb-4">
                            <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                                <i class="bi bi-cart3 text-purple-500 text-2xl"></i>
                            </div>
                            <h2 class="text-2xl font-semibold text-gray-800">Listings Management</h2>
                        </div>
                        <p class="text-gray-600">Review, approve, or remove listings from the platform.</p>
                    </div>
                }
                else if (Model.ActiveMenu == "transactions")
                {
                    <div class="bg-white rounded-xl shadow-md p-8">
                        <div class="flex items-center gap-3 mb-4">
                            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                                <i class="bi bi-currency-dollar text-green-500 text-2xl"></i>
                            </div>
                            <h2 class="text-2xl font-semibold text-gray-800">Transaction History</h2>
                        </div>
                        <p class="text-gray-600">Monitor all transactions, refunds, and payments.</p>
                    </div>
                }
                else if (Model.ActiveMenu == "settings")
                {
                    <div class="bg-white rounded-xl shadow-md p-8">
                        <div class="flex items-center gap-3 mb-4">
                            <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center">
                                <i class="bi bi-gear text-gray-500 text-2xl"></i>
                            </div>
                            <h2 class="text-2xl font-semibold text-gray-800">Admin Settings</h2>
                        </div>
                        <p class="text-gray-600">Configure platform settings, permissions, and notifications.</p>
                    </div>
                }
            </div>
        </main>
    </div>

    <script>
        // Sidebar toggle functionality
        const sidebar = document.getElementById('sidebar');
        const sidebarToggle = document.getElementById('sidebarToggle');
        const sidebarIcon = document.getElementById('sidebarIcon');
        const sidebarBrand = document.getElementById('sidebarBrand');
        const sidebarTexts = document.querySelectorAll('.sidebar-text');

        sidebarToggle.addEventListener('click', () => {
            if (sidebar.classList.contains('w-64')) {
                sidebar.classList.remove('w-64');
                sidebar.classList.add('w-20');
                sidebarIcon.classList.remove('bi-x-lg');
                sidebarIcon.classList.add('bi-list');
                sidebarBrand.classList.add('hidden');
                sidebarTexts.forEach(text => text.classList.add('hidden'));
            } else {
                sidebar.classList.remove('w-20');
                sidebar.classList.add('w-64');
                sidebarIcon.classList.remove('bi-list');
                sidebarIcon.classList.add('bi-x-lg');
                sidebarBrand.classList.remove('hidden');
                sidebarTexts.forEach(text => text.classList.remove('hidden'));
            }
        });
    </script>
</body>
</html>
