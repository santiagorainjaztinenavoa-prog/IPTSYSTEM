                                }
                            }
                            else
                            {
                                <!-- Not Logged In -->
                                @* Cart icon is NOT rendered for visitors *@
                                <a href="@Url.Action("Login", "Home")" class="btn-login-nav">
                                    <i class="bi bi-box-arrow-in-right"></i>
                                    <span>Login</span>
                                </a>
                            }
